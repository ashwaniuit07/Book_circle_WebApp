<div data-controller="hello public"
     class="relative w-full min-h-screen flex flex-col items-center justify-center text-center
            bg-gradient-to-r from-black via-gray-500 to-white overflow-hidden py-16">

  <!-- App Description -->
  <div class="bg-gray-900 bg-opacity-70 backdrop-blur-lg p-8 rounded-2xl shadow-lg mb-10 max-w-xl z-40 relative">
    <h1 class="text-4xl md:text-5xl font-bold text-white mb-4 drop-shadow-lg">Welcome to BookCircle ðŸ“š</h1>
    <p class="text-gray-200 text-lg drop-shadow-md">
      BookCircle is a modern platform connecting students and schools to buy, sell, and share books easily.
      Choose your category below to get started.
    </p>
  </div>

  <!-- Step 1: Main Selection Boxes -->
  <div data-hello-target="mainBoxes" data-public-target="mainBoxes"
       class="grid grid-cols-1 sm:grid-cols-2 gap-8 w-full max-w-4xl transition-all duration-500 ease-in-out z-20 relative ml-6 mr-6 mt-6">

    <!-- Public User -->
    <div data-action="click->public#showSignupForm"
         class="cursor-pointer bg-gray-800 text-white rounded-2xl p-12 shadow-lg hover:shadow-2xl transition duration-300 transform hover:scale-105">
      <h2 class="text-2xl font-bold mb-2">Public User</h2>
      <p>Signup or login as a public user to buy/sell books.</p>
    </div>

    <!-- School / Student -->
    <div data-action="click->hello#showSchoolOptions"
         class="cursor-pointer bg-gray-800 text-white rounded-2xl p-12 shadow-lg hover:shadow-2xl transition duration-300 transform hover:scale-105">
      <h2 class="text-2xl font-bold mb-2">School / Student</h2>
      <p>Login as school admin or student to manage and share books.</p>
    </div>
  </div>

  <!-- Step 2: School Options -->
  <div data-hello-target="schoolOptions"
       class="mt-8 hidden grid grid-cols-1 sm:grid-cols-2 gap-8 w-full max-w-4xl transition-all duration-500 ease-in-out opacity-0 z-20 relative">

    <!-- Student -->
    <div data-action="click->hello#showStudentSignup"
         class="cursor-pointer bg-gray-700 text-white rounded-2xl p-12 shadow-lg hover:shadow-2xl transition duration-300 transform hover:scale-105">
      <h2 class="text-2xl font-bold mb-2">Student</h2>
      <p>Signup or login as a student.</p>
    </div>

    <!-- School Admin -->
    <div data-action="click->hello#showSchoolAdminForm"
         class="cursor-pointer bg-gray-700 text-white rounded-2xl p-12 shadow-lg hover:shadow-2xl transition duration-300 transform hover:scale-105">
      <h2 class="text-2xl font-bold mb-2">School Admin</h2>
      <p>Signup or manage your school admin profile.</p>
    </div>
  </div>

  <!-- School Admin Signup (unchanged layout) -->
  <div data-hello-target="schoolAdminForm"
       class="mt-8 hidden transition-all duration-500 ease-in-out w-full max-w-2xl relative">
    <div class="bg-gray-800 bg-opacity-80 p-8 rounded-2xl shadow-lg">
      <button data-action="click->hello#backToSchoolOptions"
              class="absolute top-3 right-3 text-white text-xl font-bold hover:text-gray-300">âœ•</button>
      <h2 class="text-3xl font-bold text-white mb-6 text-center">School Admin Profile Form</h2>
      <%= form_with url: school_admins_path, method: :post, local: true do |f| %>
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
          <div class="flex flex-col sm:col-span-2">
            <%= f.label :official_email_id, "Official Email ID", class: "text-white mb-1" %>
            <%= f.email_field :official_email_id, class: "p-3 rounded-lg border border-gray-600 bg-gray-900 text-white w-full" %>
          </div>
          <div class="flex flex-col sm:col-span-2">
            <%= f.label :password, "Password", class: "text-white mb-1" %>
            <%= f.password_field :password, class: "p-3 rounded-lg border border-gray-600 bg-gray-900 text-white w-full" %>
          </div>
          <div class="flex flex-col sm:col-span-2">
            <%= f.label :password_confirmation, "Confirm Password", class: "text-white mb-1" %>
            <%= f.password_field :password_confirmation, class: "p-3 rounded-lg border border-gray-600 bg-gray-900 text-white w-full" %>
          </div>
          <div class="flex flex-col">
            <%= f.label :udise_code, "UDISE Code", class: "text-white mb-1" %>
            <%= f.text_field :udise_code, class: "p-3 rounded-lg border border-gray-600 bg-gray-900 text-white" %>
          </div>
          <div class="flex flex-col">
            <%= f.label :school_affiliation_code, "School Affiliation Code", class: "text-white mb-1" %>
            <%= f.text_field :school_affiliation_code, class: "p-3 rounded-lg border border-gray-600 bg-gray-900 text-white" %>
          </div>
          <div class="flex flex-col sm:col-span-2">
            <%= f.label :school_name, "School Name", class: "text-white mb-1" %>
            <%= f.text_field :school_name, class: "p-3 rounded-lg border border-gray-600 bg-gray-900 text-white w-full" %>
          </div>
          <div class="flex flex-col">
            <%= f.label :city, "City", class: "text-white mb-1" %>
            <%= f.text_field :city, class: "p-3 rounded-lg border border-gray-600 bg-gray-900 text-white" %>
          </div>
          <div class="flex flex-col">
            <%= f.label :location, "Location", class: "text-white mb-1" %>
            <%= f.text_field :location, class: "p-3 rounded-lg border border-gray-600 bg-gray-900 text-white" %>
          </div>
          <div class="flex flex-col sm:col-span-2">
            <%= f.label :state, "State", class: "text-white mb-1" %>
            <%= f.text_field :state, class: "p-3 rounded-lg border border-gray-600 bg-gray-900 text-white w-full" %>
          </div>
        </div>
        <div class="mt-6 text-center">
          <%= f.submit "Sign Up", class: "px-8 py-3 bg-white text-gray-800 font-semibold rounded-2xl hover:bg-gray-200 w-full" %>
        </div>
      <% end %>
      <p class="text-sm text-gray-300 mt-4 text-center">
        Already have an account?
        <a href="#" class="text-blue-500 underline" data-action="click->hello#showSchoolAdminLogin">Login</a>
      </p>
    </div>
  </div>

  <!-- Student Signup -->
  <div id="student-signup" data-hello-target="studentSignup"
       class="hidden mt-10 bg-gray-800 text-white p-10 rounded-2xl shadow-lg w-full max-w-lg mx-auto relative">
    <button data-action="click->hello#backToSchoolOptions"
            class="absolute -top-3 -right-3 bg-gray-600 hover:bg-gray-500 rounded-full p-2 text-white text-sm font-bold">âœ•</button>
    <h2 class="text-2xl font-bold mb-6 text-center">Student Sign Up</h2>
    <%= form_with model: User.new, url: user_registration_path, local: true do |f| %>
      <div class="space-y-4">
        <div>
          <%= f.label :name, class: "block mb-1" %>
          <%= f.text_field :name, class: "w-full p-3 rounded-lg bg-gray-700 border border-gray-600 text-white" %>
        </div>
        <div>
          <%= f.label :email, class: "block mb-1" %>
          <%= f.email_field :email, class: "w-full p-3 rounded-lg bg-gray-700 border border-gray-600 text-white" %>
        </div>
        <div>
          <%= f.label :password, class: "block mb-1" %>
          <%= f.password_field :password, class: "w-full p-3 rounded-lg bg-gray-700 border border-gray-600 text-white" %>
        </div>
        <div>
          <%= f.label :password_confirmation, class: "block mb-1" %>
          <%= f.password_field :password_confirmation, class: "w-full p-3 rounded-lg bg-gray-700 border border-gray-600 text-white" %>
        </div>
      </div>
      <%= f.hidden_field :role, value: "student" %>
      <%= f.submit "Sign Up", class: "bg-white text-gray-800 w-full py-3 mt-5 rounded-2xl font-semibold hover:bg-gray-200" %>
    <% end %>
    <p class="mt-4 text-sm text-gray-300 text-center">
      Already have an account?
      <a href="#" data-action="click->hello#showStudentLogin" class="text-blue-400 hover:underline">Login here</a>
    </p>
  </div>

  <!-- Student Login -->
  <div id="student-login" data-hello-target="studentLogin"
       class="hidden mt-10 bg-gray-800 text-white p-10 rounded-2xl shadow-lg w-full max-w-lg mx-auto relative">
    <button data-action="click->hello#backToSchoolOptions"
            class="absolute -top-3 -right-3 bg-gray-600 hover:bg-gray-500 rounded-full p-2 text-white text-sm font-bold">âœ•</button>
    <h2 class="text-2xl font-bold mb-6 text-center">Student Login</h2>
    <%= form_with url: user_session_path, local: true do |f| %>
      <div class="space-y-4">
        <div>
          <%= f.label :email, class: "block mb-1" %>
          <%= f.email_field :email, class: "w-full p-3 rounded-lg bg-gray-700 border border-gray-600 text-white" %>
        </div>
        <div>
          <%= f.label :password, class: "block mb-1" %>
          <%= f.password_field :password, class: "w-full p-3 rounded-lg bg-gray-700 border border-gray-600 text-white" %>
        </div>
      </div>
      <%= f.submit "Login", class: "bg-green-600 hover:bg-green-700 w-full py-3 mt-5 rounded-2xl font-semibold text-white" %>
    <% end %>
    <p class="mt-4 text-sm text-gray-300 text-center">
      Donâ€™t have an account?
      <a href="#" data-action="click->hello#showStudentSignup" class="text-blue-400 hover:underline">Sign up</a>
    </p>
  </div>

  <!-- Public Forms -->
  <div data-public-target="formSection"
       class="hidden mt-10 w-full max-w-md bg-gray-900 bg-opacity-90 p-10 rounded-2xl shadow-lg
              text-left text-white transition-all duration-500 ease-in-out z-30 relative ">
    <button data-action="click->public#closeForm"
            class="absolute -top-3 -right-1 -left-10 bg-gray-600 hover:bg-gray-500 rounded-full p-2 text-white text-sm font-bold ">âœ•</button>

    <!-- Public Signup -->
    <div data-public-target="signupForm">
      <h2 class="text-2xl font-bold mb-6 text-center">Public Signup</h2>
      <%= form_with model: User.new, url: user_registration_path, local: true do |f| %>
        <div class="space-y-4">
          <div>
            <%= f.label :name, class: "block mb-1" %>
            <%= f.text_field :name, class: "w-full p-3 rounded-lg bg-white text-black" %>
          </div>
          <div>
            <%= f.label :email, class: "block mb-1" %>
            <%= f.email_field :email, class: "w-full p-3 rounded-lg bg-white text-black" %>
          </div>
          <div>
            <%= f.label :password, class: "block mb-1" %>
            <%= f.password_field :password, class: "w-full p-3 rounded-lg bg-white text-black" %>
          </div>
          <div>
            <%= f.label :password_confirmation, class: "block mb-1" %>
            <%= f.password_field :password_confirmation, class: "w-full p-3 rounded-lg bg-white text-black" %>
          </div>
        </div>
        <%= f.submit "Sign Up", class: "bg-white text-gray-800 w-full py-3 mt-6 rounded-2xl font-semibold hover:bg-gray-200" %>
      <% end %>
      <p class="mt-4 text-center text-gray-300">
        Already have an account?
        <span data-action="click->public#showLoginForm" class="text-blue-400 cursor-pointer hover:underline">Login</span>
      </p>
    </div>

    <!-- Public Login -->
    <div data-public-target="loginForm" class="hidden">
      <h2 class="text-2xl font-bold mb-6 text-center">Public Login</h2>
      <%= form_with url: user_session_path, local: true do |f| %>
        <div class="space-y-4">
          <div>
            <%= f.label :email, class: "block mb-1" %>
            <%= f.email_field :email, class: "w-full p-3 rounded-lg bg-white text-black" %>
          </div>
          <div>
            <%= f.label :password, class: "block mb-1" %>
            <%= f.password_field :password, class: "w-full p-3 rounded-lg bg-white text-black" %>
          </div>
        </div>
        <%= f.submit "Login", class: "bg-green-600 hover:bg-green-700 w-full py-3 mt-6 rounded-2xl font-semibold text-white" %>
      <% end %>
      <p class="mt-4 text-center text-gray-300">
        Don't have an account?
        <span data-action="click->public#showSignupForm" class="text-blue-400 cursor-pointer hover:underline">Sign up</span>
      </p>
    </div>
  </div>
</div>
