<div class="min-h-screen bg-gray-100 flex flex-col items-center py-10">
  <div class="bg-white shadow-lg rounded-2xl p-8 w-full max-w-2xl">
    <h1 class="text-3xl font-bold mb-6 text-center">Edit Your Profile üìù</h1>

    <%= form_with model: @public_user, url: public_dashboard_path, local: true do |f| %>
      <div class="space-y-4">
        <div>
          <%= f.label :name, "Full Name", class: "block mb-1 font-semibold" %>
          <%= f.text_field :name, class: "w-full border rounded-lg p-3" %>
        </div>

        <div>
          <%= f.label :phone, "Phone Number", class: "block mb-1 font-semibold" %>
          <%= f.text_field :phone, class: "w-full border rounded-lg p-3" %>
        </div>

        <div>
          <%= f.label :address, "Address", class: "block mb-1 font-semibold" %>
          <%= f.text_area :address, class: "w-full border rounded-lg p-3" %>
        </div>

        <div>
          <%= f.label :city, "City", class: "block mb-1 font-semibold" %>
          <%= f.text_field :city, class: "w-full border rounded-lg p-3" %>
        </div>

        <div>
          <%= f.label :state, "State", class: "block mb-1 font-semibold" %>
          <%= f.text_field :state, class: "w-full border rounded-lg p-3" %>
        </div>

        <div>
          <%= f.label :pincode, "Pincode", class: "block mb-1 font-semibold" %>
          <%= f.text_field :pincode, class: "w-full border rounded-lg p-3" %>
        </div>

        <div>
          <%= f.label :profile_picture, "Profile Picture", class: "block mb-1 font-semibold" %>
          <%= f.file_field :profile_picture, class: "w-full border rounded-lg p-3 bg-white" %>
        </div>
      </div>

      <div class="mt-6 flex justify-between">
        <%= f.submit "Save Changes", class: "bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-lg" %>
        <%= link_to "Back", public_dashboard_path, class: "bg-gray-400 hover:bg-gray-500 text-white px-4 py-2 rounded-lg" %>
      </div>
    <% end %>
  </div>
</div>
